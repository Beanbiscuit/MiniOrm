<?xml version="1.0" encoding="UTF-8"?>

<phpunit colors="true"
         bootstrap="../../../vendor/autoload.php"
         stopOnFailure="false" 
         stopOnError="false"
         backupGlobals = "false"
         processIsolation = "false"
         convertErrorsToException = "false"
         convertWarningsToException = "false"
         convertNoticesToException = "false"
         syntaxCheck = "false">

    <testsuites>
        <testsuite name="Core ORM tests.">
            <file>./ConfigurationTest.php</file>
            <file>./DbalManagerTest.php</file>
            <file>./DriveFactoryTest.php</file>
            <file>./EntityManagerTest.php</file>
            <file>./UnitOfWorkTest.php</file>
        </testsuite>
        <testsuite name="DBAL driver tests.">
            <file>./Driver/MySqlTest.php</file>
        </testsuite>
        <testsuite name="Mapping tests.">
            <file>./aApping/AnnotationMappingTest.php</file>
        </testsuite>
        <testsuite name="Mapping tests.">
            <file>./Prepare/PrepareStatementImplTest.php</file>
        </testsuite>
    </testsuites>
    
    <logging>
        <log type="coverage.html" target="/tmp/report.html" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50" highLowerBound = "80"/>
        <log type="testdox-html" target="/tmp/testdox.html"/>
    </logging>
</phpunit>